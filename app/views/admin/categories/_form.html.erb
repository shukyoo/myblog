<%= form_for [:admin, @category], html:{class:"definewidth m20"} do |f| %>
    <table class="table table-bordered table-hover definewidth m10">
      <tr>
        <td width="10%" class="tableleft">名称</td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td width="10%" class="tableleft">位置</td>
        <td>
          <%= f.text_field :position %>
        </td>
      </tr>
      <tr>
        <td class="tableleft"></td>
        <td>
          <%= f.submit "保存", :class => "btn btn-primary" %>&nbsp;&nbsp;
          <%= f.button "返回列表", :class => "btn btn-success", :id => "backid" %>
        </td>
      </tr>
    </table>
<% end %>
